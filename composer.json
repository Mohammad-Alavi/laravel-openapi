{
    "name": "mohammad-alavi/laravel-openapi",
    "type": "library",
    "description": "Generate OpenAPI Specification for Laravel Applications",
    "keywords": [
        "laravel",
        "openapi",
        "api",
        "documentation",
        "docs",
        "rest",
        "swagger"
    ],
    "license": "MIT",
    "homepage": "https://mohammad-alavi.github.io/laravel-openapi/",
    "support": {
        "issues": "https://github.com/Mohammad-Alavi/issues",
        "source": "https://github.com/Mohammad-Alavi"
    },
    "authors": [
        {
            "name": "Mohammad Alavi",
            "email": "mohammad.alavi1990@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "doctrine/dbal": "^2.6|^3.0",
        "goldspecdigital/oooas": "^2.7.1",
        "laravel/framework": "5.8.*|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0",
        "roave/security-advisories": "dev-latest"
    },
    "require-dev": {
        "fakerphp/faker": "^1.19.1",
        "friendsofphp/php-cs-fixer": "^3.8.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "mockery/mockery": "^1.4.4",
        "orchestra/testbench": "^5.3|^6.0|^7.0|^8.0",
        "php-standard-library/psalm-plugin": "^2.3",
        "phpmd/phpmd": "@stable",
        "phpunit/phpunit": "^10.0.0",
        "psalm/plugin-mockery": "^1.1",
        "psalm/plugin-phpunit": "^0.18.4",
        "vimeo/psalm": "^5.8.0"
    },
    "autoload": {
        "psr-4": {
            "MohammadAlavi\\LaravelOpenApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MohammadAlavi\\LaravelOpenApi\\Tests\\": "tests/",
            "Examples\\Petstore\\": "examples/petstore/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "github-protocols": [
            "https"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "MohammadAlavi\\LaravelOpenApi\\OpenApiServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
